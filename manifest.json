{
  "name": "Tray Chrome Extension",
  "description": "Extens√£o para trabalhar com lojas Tray",
  "version": "1.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/chrome/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "dist/index.html",
    "default_icon": {
      "16": "./src/assets/icon.png",
      "48": "./src/assets/icon.png",
      "128": "./src/assets/icon.png"
    }
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["tabs", "activeTab", "scripting", "storage", "browsingData"]
}
