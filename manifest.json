{
  "name": "Tray Chrome Extension",
  "description": "Extens√£o para trabalhar com lojas Tray",
  "version": "1.0.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/chrome/index.js",
    "type": "module"
  },
  "action": {
    "default_popup": "dist/index.html",
    "default_icon": {
      "16": "dist/assets/icon.png",
      "48": "dist/assets/icon.png",
      "128": "dist/assets/icon.png"
    }
  },
  "host_permissions": ["<all_urls>"],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "browsingData",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead"
  ],
  "icons": {
    "16": "dist/assets/icon.png",
    "48": "dist/assets/icon.png",
    "128": "dist/assets/icon.png"
  }
}
