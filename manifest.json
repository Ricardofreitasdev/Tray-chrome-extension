{
    "name": "Tray DevTools",
    "description": "Descrição da minha extensão",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "src/google/background.js",
      "type": "module"
    },
    "action": {
      "default_popup": "dist/index.html",
      "default_icon": {
        "16": "./src/assets/icon.png",
        "48": "./src/assets/icon.png",
        "128": "./src/assets/icon.png"
      }
    },
    "host_permissions": ["<all_urls>"],
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage",
      "browsingData"
    ]
  }
  